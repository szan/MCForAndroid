<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingBottom="10dp" android:weightSum="10">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Device name:"
                android:id="@+id/deviceNameText"
                android:layout_gravity="left|center_vertical"
                android:textSize="@dimen/NormalTextSize"
                android:layout_weight="4" android:textStyle="bold"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/currentValueText"
                android:editable="false"
                android:enabled="false"
                android:inputType="number" android:layout_weight="4" android:text="0"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_gravity="center_vertical"
                android:id="@+id/buttonEdit" android:layout_weight="2"/>
</LinearLayout>